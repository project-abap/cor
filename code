        pp_midterm = 0.
      ENDIF.

WRITE:                                                                                                                           /125 'Down Payment (Upon',/125 'Enrollment) 40%',      155 p_down,
       /'This is your official Certificate of Registration when validated and signed in in by the College',                      /125 'Midterm (May 16 - May 18',/125 '2019) 30%',      155 p_midterm,
