TYPE-POOLS: vrm.

" commons
TYPES:
  FLOAT TYPE P DECIMALS 2.

" dropdowns

DATA:
  vrm_id TYPE vrm_id,
  vrm_list TYPE vrm_values,
  vrm_item LIKE LINE OF vrm_list.

AT SELECTION-SCREEN OUTPUT.

  " classification
  CLEAR vrm_list.
  vrm_id = 'u_cl'.
  vrm_item-key = vrm_item-text = 'ENROLLEE'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'LCONTINUING'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'TRANSFEREE'. APPEND vrm_item TO vrm_list.

  CALL FUNCTION 'VRM_SET_VALUES' EXPORTING id = vrm_id values = vrm_list.

  " programs
  CLEAR vrm_list.
  vrm_id = 'u_prog'.
  vrm_item-key = vrm_item-text = 'BSITWMA'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'BSITAGD'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'BSITDA'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'BSITSMBA'. APPEND vrm_item TO vrm_list.

  CALL FUNCTION 'VRM_SET_VALUES' EXPORTING id = vrm_id values = vrm_list.

  " programs
  CLEAR vrm_list.
  vrm_id = 'u_sem'.
  vrm_item-key = vrm_item-text = '1'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = '2'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = '3'. APPEND vrm_item TO vrm_list.

  CALL FUNCTION 'VRM_SET_VALUES' EXPORTING id = vrm_id values = vrm_list.

  " then levels
  vrm_id = 'u_lvl'.
  vrm_item-key = vrm_item-text = '4'. APPEND vrm_item TO vrm_list.

  CALL FUNCTION 'VRM_SET_VALUES' EXPORTING id = vrm_id values = vrm_list.

  " programs
  CLEAR vrm_list.
  vrm_id = 'u_scho'.
  vrm_item-key = vrm_item-text = 'Regular Student'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'ACAD50'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'ACAD75'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'PSTOP50'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'PSSAL75'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'PSVAL100'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'ELITE'. APPEND vrm_item TO vrm_list.
  vrm_item-key = vrm_item-text = 'MEGAWORLD'. APPEND vrm_item TO vrm_list.

  CALL FUNCTION 'VRM_SET_VALUES' EXPORTING id = vrm_id values = vrm_list.


"
"! actual start of the your program bruh
"


START-OF-SELECTION.

" WITH FRAME TITLE x
"Input Fields"
" SELECTION-SCREEN BEGIN OF BLOCK b1.

" SELECTION-SCREEN BEGIN OF LINE.


SELECTION-SCREEN BEGIN OF BLOCK _user WITH FRAME TITLE _user.
  SELECTION-SCREEN BEGIN OF BLOCK _u_name WITH FRAME TITLE _u_name.

  PARAMETERS:
    u_fname(50) TYPE c,
    u_mname(50) TYPE c,
    u_lname(50) TYPE c.

  SELECTION-SCREEN END OF BLOCK _u_name.
SELECTION-SCREEN END OF BLOCK _user.

INITIALIZATION. 
  _user = 'User information'.
  _u_name = 'User name'.

SELECTION-SCREEN SKIP 1.

PARAMETERS:
  u_sid(11) TYPE c,

  u_cl(12) AS LISTBOX VISIBLE LENGTH 12, " OBLIGATORY,
  u_prog(12) AS LISTBOX VISIBLE LENGTH 12, "OBLIGATORY,
  u_lvl(4) AS LISTBOX VISIBLE LENGTH 4, "OBLIGATORY,
  u_scho(18) AS LISTBOX VISIBLE LENGTH 18, " OBLIGATORY,

  u_addr(50) TYPE c, "Address"
  u_phnum(11) TYPE c, "Phone Number"
  u_sem(3) TYPE c, "Trimester Number"
  u_zcode(4) TYPE c, "ZipCode"
  u_tfee TYPE FLOAT. "Tuition Fee"


" SELECTION-SCREEN END OF LINE.
" SELECTION-SCREEN END OF BLOCK b1.



" START-OF-SELECTION.
WRITE: / 'Classif:', u_cl.
WRITE: / 'Program:', u_prog.
