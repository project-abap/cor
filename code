       /'',10'TOTAL UNITS',         29'18'.

      IF u_scho = '6'.
        WRITE: 125'President Scholar',/125'Valedictorian (100% of','( ', f_total,')',/125'Tuition and Miscellaneous',/125'Fee)'.
        pp_down = 0.
